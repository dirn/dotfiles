[user]
    email = andy.dirnberger@gmail.com
    name = Andy Dirnberger

[alias]
    br = branch
    ci = commit
    co = checkout
    cp = cherry-pick
    rb = rebase
    st = status

    aliases = !git config -l | grep alias | cut -c 7-
    amend = commit --amend
    force = push --force-with-lease
    ls = log --pretty=format:"%C(yellow)%h%C(cyan)%d\\ %Creset%s%Cred\\ [%an]"
    ll = ls --decorate --numstat
    pop = reset --soft HEAD~1
    when = log --pretty=format:"%C(yellow)%h\\ %C(green)%ad%C(cyan)%d\\ %Creset%s%Cred\\ [%an]" --decorate --date=relative
    wip = commit -m"[WIP]"
[color]
    ui = true
[core]
    editor = nvim
    excludesfile = ~/.gitignoreglobal
[diff]
    algorithm = patience
[difftool]
    prompt = false
[fetch]
    prune = true
[init]
    templateDir = /Users/dirn/.gittemplate
[mergetool]
    keepBackup = false
    prompt = false
[pull]
    rebase = true
[push]
    default = simple
[rebase]
    autoStash = true
[rerere]
    enabled = true
