[user]
    email = andy.dirnberger@gmail.com
    name = Andy Dirnberger

[alias]
    br = branch
    ci = commit
    cp = cherry-pick
    rb = rebase
    re = restore
    st = status
    sw = switch

    aliases = !git config -l | grep alias | cut -c 7-
    amend = commit --amend
    force = push --force-with-lease
    ls = log --pretty=format:"%C(yellow)%h%C(cyan)%d\\ %Creset%s%Cred\\ [%an]"
    ll = ls --decorate --numstat
    pop = reset --soft HEAD~1
    when = log --pretty=format:"%C(yellow)%h\\ %C(green)%ad%C(cyan)%d\\ %Creset%s%Cred\\ [%an]" --decorate --date=relative
    wip = commit -m"[WIP]"
[color]
    ui = true
[color "advice"]
    hint = "#ffb86c"  ; orange
[color "branch"]
    current = "#ffb86c"  ; orange
    local = "#f8f8f2"  ; white
    remote = "#bd93f9"  ; purple
[color "decorate"]
    branch = "#ffb86c"  ; orange
    HEAD = "#ff5555"  ; red
    remoteBranch = "#bd93f9"  ; purple
    stash = "#50fa7b"  ; green
    tag = "#8be9fd"  ; cyan
[color "diff"]
    frag = "#ff79c6"
    meta = "#8be9fd"
    new = "#50fa7b"
    old = "#ff5555"
[color "status"]
    added = "#50fa7b"  ; green
    changed = "#bd93f9"  ; purple
    untracked = "#ffb86c"  ; orange
[commit]
    gpgsign = true
[core]
    editor = nvim
    pager = delta
[delta]
    file-decoration-style = underline
    hunk-header-decoration-style = yellow box
    line-numbers = true
    navigate = true
    side-by-side = true
    syntax-theme = Dracula
    zero-style = dim syntax
[diff]
    algorithm = patience
    colorMoved = default
[difftool]
    prompt = false
[fetch]
    prune = true
[gpg]
    format = ssh
[gpg.ssh]
    allowedSignersFile = ~/.config/git/allowed_signers
    defaultKeyCommand = ssh-add -L
[init]
    defaultBranch = main
    templateDir = ~/.config/git/template
[interactive]
    diffFilter = delta --color-only
[mergetool]
    keepBackup = false
    prompt = false
[pull]
    rebase = true
[push]
    default = simple
[rebase]
    autoStash = true
[rerere]
    enabled = true
[tag]
    gpgsign = true
