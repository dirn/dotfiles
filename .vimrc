" These are some of the settings that I rely on the most. They're mostly
" documented in my Neovim configuration.
filetype plugin indent on
syntax enable

set encoding=utf8

set autoindent
set backspace=indent,eof,start
set smarttab

set hidden

set nojoinspaces

set lazyredraw
set textwidth=80
set linebreak
set nowrap

set nobackup
set noswapfile
set nowritebackup

set cursorline

set gdefault
set hlsearch
set incsearch
set ignorecase
set smartcase

set laststatus=2
set ruler

set number

set spell

set sidescroll=1

set scrolloff=2

set nofoldenable

set splitright
set splitbelow

inoremap jk <esc>
